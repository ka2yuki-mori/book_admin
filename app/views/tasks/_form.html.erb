#  render 'form', task: @task
<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(task.errors.count, "error" ) %> prohibited this task form being save:
      </h2>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.lavel :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>